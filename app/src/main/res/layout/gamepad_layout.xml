<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="A"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonA" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"/>
    <Button
            android:text="B"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonB"
            app:layout_constraintBottom_toTopOf="@+id/buttonA" app:layout_constraintStart_toEndOf="@+id/buttonA"
    />
    <Button
            android:text="X"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/buttonX"
            android:background="@drawable/btn_drawable"
            app:layout_constraintBottom_toTopOf="@+id/buttonA" app:layout_constraintEnd_toStartOf="@+id/buttonA"
    />
    <Button
            android:text="Y"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonY" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonA" app:layout_constraintEnd_toEndOf="@+id/buttonB"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/buttonX"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="G1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonG1"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="G2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonG2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/buttonA"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="slct"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonSL" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="STR"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonST" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSL" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/pointer_small"
            android:id="@+id/mouseWheel" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonY"/>
    <Button
            android:text="L1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonL1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView"/>
    <Button
            android:text="L2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonL2" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonL1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="R1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonR1"
            app:layout_constraintEnd_toStartOf="@+id/mouseWheel"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"/>
    <Button
            android:text="R2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_drawable"
            android:id="@+id/buttonR2" app:layout_constraintEnd_toStartOf="@+id/mouseWheel"
            android:layout_marginEnd="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonR1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_drawable"
            android:id="@+id/FScreen"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonL2" android:layout_marginStart="32dp"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/STRKeyCode"
            app:layout_constraintEnd_toEndOf="@+id/buttonST" app:layout_constraintStart_toStartOf="@+id/buttonST"
            app:layout_constraintBottom_toTopOf="@+id/buttonST"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/SLCTKeyCode"
            app:layout_constraintEnd_toEndOf="@+id/buttonSL" app:layout_constraintStart_toStartOf="@+id/buttonSL"
            app:layout_constraintBottom_toTopOf="@+id/buttonSL"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/AKeyCode"
            app:layout_constraintBottom_toTopOf="@+id/buttonA"
            app:layout_constraintEnd_toEndOf="@+id/buttonA" app:layout_constraintStart_toStartOf="@+id/buttonA"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/BKeyCode"
            app:layout_constraintEnd_toEndOf="@+id/buttonB" app:layout_constraintStart_toStartOf="@+id/buttonB"
            app:layout_constraintBottom_toTopOf="@+id/buttonB"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/XKeyCode"
            app:layout_constraintEnd_toEndOf="@+id/buttonX" app:layout_constraintStart_toStartOf="@+id/buttonX"
            app:layout_constraintBottom_toTopOf="@+id/buttonX"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/YKeyCode"
            app:layout_constraintEnd_toEndOf="@+id/buttonY" app:layout_constraintStart_toStartOf="@+id/buttonY"
            app:layout_constraintBottom_toTopOf="@+id/buttonY"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/L1KeyCode"
            app:layout_constraintStart_toStartOf="@+id/buttonL1" app:layout_constraintEnd_toEndOf="@+id/buttonL1"
            app:layout_constraintBottom_toTopOf="@+id/buttonL1"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/L2KeyCode"
            app:layout_constraintStart_toStartOf="@+id/buttonL2" app:layout_constraintEnd_toEndOf="@+id/buttonL2"
            app:layout_constraintBottom_toTopOf="@+id/buttonL2"/>
    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/R1KeyCode"
            app:layout_constraintEnd_toEndOf="@+id/buttonR1"
            app:layout_constraintBottom_toTopOf="@+id/buttonR1"
            app:layout_constraintStart_toStartOf="@+id/buttonR1"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/R2KeyCode"
            app:layout_constraintBottom_toTopOf="@+id/buttonR2"
            app:layout_constraintEnd_toEndOf="@+id/buttonR2" app:layout_constraintStart_toStartOf="@+id/buttonR2"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/G1KeyCode"
            app:layout_constraintStart_toStartOf="@+id/buttonG1" app:layout_constraintEnd_toEndOf="@+id/buttonG1"
            app:layout_constraintBottom_toTopOf="@+id/buttonG1"/>

    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/G2KeyCode"
            app:layout_constraintEnd_toEndOf="@+id/buttonG2" app:layout_constraintStart_toStartOf="@+id/buttonG2"
            app:layout_constraintBottom_toTopOf="@+id/buttonG2"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp" android:src="@drawable/menu"
            android:id="@+id/menuImage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/FScreen"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" android:src="@drawable/movement"
            android:id="@+id/imageView"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" android:src="@drawable/pointer_small"
            android:id="@+id/d_pad_image"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>
    <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:id="@+id/dPadKeyCode" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/linux_icon"
            android:id="@+id/os_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menuImage"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>