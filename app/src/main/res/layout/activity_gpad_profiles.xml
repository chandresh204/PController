<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPadProfiles">

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/addNewProfileBtn"
        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profileRecycler">

    </androidx.recyclerview.widget.RecyclerView>

    <Button android:layout_width="match_parent"
        android:text="Create New Profile"
        android:id="@+id/addNewProfileBtn"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>